# to be build from the flutter directory
# with: docker build --build-arg DOCKER_TAG=1.3.0 -f packages/health/Dockerfile -t growerp/health . --progress=plain
#
#Stage 1 - Install dependencies and build the app
FROM growerp/flutter-sdk-image:latest AS build-env
USER root

ARG DOCKER_TAG=1.0.0+1
# Install linux dependencies
RUN apt-get update && \
    apt-get install -y git zip libgconf-2-4 gdb libstdc++6 \
    fonts-droid-fallback nano sed && \
    apt-get clean

# git security
RUN git config --system --add safe.directory '*'
RUN git config --global --add safe.directory /home/mobiledevops/.flutter-sdk

# get growerp repos
USER mobiledevops
WORKDIR /home/mobiledevops
# RUN git clone --depth 1 https://github.com/growerp/growerp.git
COPY --chown=mobiledevops:mobiledevops . /home/mobiledevops/
RUN echo "pwd: $PWD"
RUN sed -i 's\//webactivate \\' /home/mobiledevops/packages/health/lib/main.dart
# RUN more /home/mobiledevops/packages/health/lib/main.dart
# change flutter version if required
RUN flutter channel master
RUN flutter upgrade
RUN flutter --version
USER root
RUN chown mobiledevops:mobiledevops /home/mobiledevops/.pub-cache -R
# preparing
# activate melos
RUN flutter pub global activate melos 3.4.0
ENV PATH="$PATH:$HOME/.pub-cache/bin"
RUN melos clean
RUN melos bootstrap
# localization
RUN melos l10n --no-select
# build
RUN melos build --no-select
# build flutter app
WORKDIR /home/mobiledevops/packages/health
#RUN sed -i 's/version: .*/version: '"${DOCKER_TAG}"'/' pubspec.yaml
RUN flutter build web --release

# Stage 2 - Create the run-time image
FROM nginx
COPY --from=build-env /home/mobiledevops/packages/health/build/web /usr/share/nginx/html
EXPOSE 80
