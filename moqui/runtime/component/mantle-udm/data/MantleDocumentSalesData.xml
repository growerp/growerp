<entity-facade-xml type="seed-initial">
    <!-- NOTE: when updating these it's best to delete the indexes through ElasticSearch, then reindex the MantleSales feed:

        curl http://localhost:9200/_cat/indices?v

        curl -X DELETE http://localhost:9200/mantle_sales_order_part?pretty
        curl -X DELETE http://localhost:9200/mantle_sales_order_item?pretty
        curl -X DELETE http://localhost:9200/mantle_sales_invoice?pretty
        curl -X DELETE http://localhost:9200/mantle_sales_invoice_item?pretty
    -->

    <!-- Sales OrderPart -->
    <dataDocuments dataDocumentId="MantleSalesOrderPart" indexName="mantle_sales" documentName="Sales Order Part"
            primaryEntityName="mantle.order.OrderPart" documentTitle="${orderId}:${orderPartSeqId}">
        <fields fieldSeqId="01" fieldPath="orderId"/>
        <fields fieldSeqId="02" fieldPath="orderPartSeqId"/>
        <fields fieldSeqId="03" fieldPath="statusId" fieldNameAlias="partStatusId"/>
        <fields fieldSeqId="04" fieldPath="facilityId"/>
        <fields fieldSeqId="05" fieldPath="shipmentMethodEnumId"/>
        <fields fieldSeqId="08" fieldPath="partTotal"/>

        <fields fieldSeqId="11" fieldPath="vendorPartyId"/>
        <fields fieldSeqId="12" fieldPath="vendorRoles:roleTypeId" fieldNameAlias="vendorRoleTypeId"/>
        <fields fieldSeqId="15" fieldPath="customerPartyId"/>
        <fields fieldSeqId="19" fieldPath="isNewCustomer"/>

        <fields fieldSeqId="31" fieldPath="postalAddress:city"/>
        <fields fieldSeqId="32" fieldPath="postalAddress:stateProvinceGeoId"/>
        <fields fieldSeqId="33" fieldPath="postalAddress:countryGeoId"/>
        <fields fieldSeqId="34" fieldPath="postalAddress:postalCode"/>
        <fields fieldSeqId="35" fieldPath="postalAddress:postalCodeExt"/>

        <fields fieldSeqId="41" fieldPath="orderHeader:entryDate"/>
        <fields fieldSeqId="42" fieldPath="orderHeader:placedDate"/>
        <fields fieldSeqId="43" fieldPath="orderHeader:statusId"/>
        <fields fieldSeqId="44" fieldPath="orderHeader:productStoreId"/>
        <fields fieldSeqId="45" fieldPath="orderHeader:salesChannelEnumId"/>
        <fields fieldSeqId="46" fieldPath="orderHeader:currencyUomId"/>
        <fields fieldSeqId="47" fieldPath="orderHeader:grandTotal"/>

        <fields fieldSeqId="51" fieldPath="orderHeader:statusLogs:oldValueText" fieldNameAlias="oldStatusId"/>
        <fields fieldSeqId="52" fieldPath="orderHeader:statusLogs:newValueText" fieldNameAlias="newStatusId"/>
        <fields fieldSeqId="53" fieldPath="orderHeader:statusLogs:changedDate" fieldNameAlias="statusChangedDate"/>
        <fields fieldSeqId="54" fieldPath="orderHeader:statusLogs:changeReason" fieldNameAlias="statusChangeReason"/>
        <fields fieldSeqId="55" fieldPath="orderHeader:statusLogs:changedByUserId" fieldNameAlias="statusChangedByUserId"/>

        <!-- get most recent approved and completed dates (sort reverse) -->
        <fields fieldSeqId="61" fieldPath="(statusLogs?.sort({a,b-&gt;b.statusChangedDate&lt;=&gt;a.statusChangedDate})?.find({it.newStatusId=='OrderApproved'})?.statusChangedDate)"
                fieldNameAlias="approvedDate" fieldType="date"/>
        <fields fieldSeqId="62" fieldPath="(statusLogs?.sort({a,b-&gt;b.statusChangedDate&lt;=&gt;a.statusChangedDate})?.find({it.newStatusId=='OrderCompleted'})?.statusChangedDate)"
                fieldNameAlias="completedDate" fieldType="date"/>
        <fields fieldSeqId="65" fieldPath="(approvedDate&amp;&amp;placedDate?(approvedDate.time-placedDate.time)/(60*60*1000):null)"
                fieldNameAlias="approvedHours" fieldType="double"/>
        <fields fieldSeqId="66" fieldPath="(completedDate&amp;&amp;approvedDate?(completedDate.time-approvedDate.time)/(60*60*1000):null)"
                fieldNameAlias="completedHours" fieldType="double"/>

        <conditions conditionSeqId="01" fieldNameAlias="vendorRoleTypeId" fieldValue="OrgInternal"/>
    </dataDocuments>

    <!-- Sales OrderItem -->
    <dataDocuments dataDocumentId="MantleSalesOrderItem" indexName="mantle_sales" documentName="Sales Order Item"
            primaryEntityName="mantle.order.OrderItem" documentTitle="${orderId}:${orderItemSeqId}">
        <fields fieldSeqId="01" fieldPath="orderId"/>
        <fields fieldSeqId="02" fieldPath="orderItemSeqId"/>
        <fields fieldSeqId="03" fieldPath="parentItemSeqId"/>
        <fields fieldSeqId="04" fieldPath="orderPartSeqId"/>
        <fields fieldSeqId="05" fieldPath="itemTypeEnumId"/>
        <fields fieldSeqId="06" fieldPath="productId"/>
        <fields fieldSeqId="07" fieldPath="quantity" fieldNameAlias="orderQuantity"/>
        <fields fieldSeqId="08" fieldPath="selectedAmount"/>
        <fields fieldSeqId="09" fieldPath="unitAmount"/>
        <fields fieldSeqId="10" fieldPath="unitListPrice"/>
        <fields fieldSeqId="11" fieldPath="requiredByDate"/>
        <fields fieldSeqId="12" fieldPath="isPromo"/>
        <fields fieldSeqId="13" fieldPath="((orderQuantity ?: 1.0) * (unitAmount ?: 0.0))" fieldNameAlias="itemSaleTotal" fieldType="double"/>
        <fields fieldSeqId="14" fieldPath="(issuances ? issuances.sum({ (it.acquireCost ?: 0.0) * it.issuedQuantity }) : null)"
                fieldNameAlias="itemCostTotal" fieldType="double"/>
        <fields fieldSeqId="15" fieldPath="(issuances ? ((orderQuantity ?: 1.0) * (unitAmount ?: 0.0)) - issuances.sum({ (it.acquireCost ?: 0.0) * it.issuedQuantity }) : null)"
                fieldNameAlias="itemMarginTotal" fieldType="double"/>
        <fields fieldSeqId="16" fieldPath="(issuances &amp;&amp; unitAmount ? (((orderQuantity ?: 1.0) * unitAmount) - issuances.sum({ (it.acquireCost ?: 0.0) * it.issuedQuantity })) / ((orderQuantity ?: 1.0) * unitAmount) : null)"
                fieldNameAlias="itemMarginPercent" fieldType="double"/>

        <fields fieldSeqId="21" fieldPath="part:statusId" fieldNameAlias="partStatusId"/>
        <fields fieldSeqId="22" fieldPath="part:facilityId"/>
        <fields fieldSeqId="23" fieldPath="part:vendorPartyId"/>
        <fields fieldSeqId="24" fieldPath="part:vendorRoles:roleTypeId" fieldNameAlias="vendorRoleTypeId"/>
        <fields fieldSeqId="25" fieldPath="part:customerPartyId"/>
        <fields fieldSeqId="26" fieldPath="part:isNewCustomer"/>
        <fields fieldSeqId="27" fieldPath="part:shipmentMethodEnumId"/>

        <fields fieldSeqId="31" fieldPath="part:postalAddress:city"/>
        <fields fieldSeqId="32" fieldPath="part:postalAddress:stateProvinceGeoId"/>
        <fields fieldSeqId="33" fieldPath="part:postalAddress:countryGeoId"/>
        <fields fieldSeqId="34" fieldPath="part:postalAddress:postalCode"/>
        <fields fieldSeqId="35" fieldPath="part:postalAddress:postalCodeExt"/>

        <fields fieldSeqId="41" fieldPath="header:entryDate"/>
        <fields fieldSeqId="42" fieldPath="header:placedDate"/>
        <fields fieldSeqId="43" fieldPath="header:statusId"/>
        <fields fieldSeqId="44" fieldPath="header:productStoreId"/>
        <fields fieldSeqId="45" fieldPath="header:salesChannelEnumId"/>
        <fields fieldSeqId="46" fieldPath="header:currencyUomId"/>

        <fields fieldSeqId="51" fieldPath="issuances:issuedDate"/>
        <fields fieldSeqId="52" fieldPath="issuances:quantity" fieldNameAlias="issuedQuantity"/>
        <fields fieldSeqId="53" fieldPath="issuances:asset:acquireCost"/>
        <fields fieldSeqId="54" fieldPath="issuances:asset:lotId"/>
        <fields fieldSeqId="55" fieldPath="issuances:(issuedQuantity * (unitAmount ?: 0.0))" fieldNameAlias="issuedSaleTotal" fieldType="double"/>
        <fields fieldSeqId="56" fieldPath="issuances:(acquireCost ? issuedQuantity * acquireCost : null)" fieldNameAlias="issuedCostTotal" fieldType="double"/>
        <fields fieldSeqId="57" fieldPath="issuances:(acquireCost ? (unitAmount ?: 0.0) - acquireCost : null)" fieldNameAlias="issuedMargin" fieldType="double"/>
        <fields fieldSeqId="58" fieldPath="issuances:(acquireCost &amp;&amp; unitAmount ? (unitAmount - acquireCost) / unitAmount : null)"
                fieldNameAlias="issuedMarginPercent" fieldType="float"/>
        <fields fieldSeqId="59" fieldPath="issuances:(acquireCost ? (issuedQuantity * (unitAmount ?: 0.0)) - (issuedQuantity * acquireCost) : null)"
                fieldNameAlias="issuedMarginTotal" fieldType="double"/>

        <fields fieldSeqId="61" fieldPath="product:pseudoId"/>
        <fields fieldSeqId="62" fieldPath="product:productTypeEnumId"/>
        <fields fieldSeqId="63" fieldPath="product:productClassEnumId"/>
        <fields fieldSeqId="64" fieldPath="product:assetTypeEnumId"/>
        <fields fieldSeqId="65" fieldPath="product:assetClassEnumId"/>

        <fields fieldSeqId="71" fieldPath="product:dimensions:dimensionTypeId"/>
        <fields fieldSeqId="72" fieldPath="product:dimensions:value" fieldNameAlias="dimensionValue"/>

        <fields fieldSeqId="81" fieldPath="product:features:productFeatureId"/>
        <fields fieldSeqId="82" fieldPath="product:features:applTypeEnumId"/>
        <fields fieldSeqId="83" fieldPath="product:features:fromDate" fieldNameAlias="applFromDate"/>
        <fields fieldSeqId="84" fieldPath="product:features:thruDate" fieldNameAlias="applThruDate"/>
        <fields fieldSeqId="85" fieldPath="product:features:feature:productFeatureTypeEnumId"/>

        <fields fieldSeqId="90" fieldPath="part:customerClasses:partyClassificationId"/>
        <fields fieldSeqId="91" fieldPath="part:customerClasses:fromDate" fieldNameAlias="classFromDate"/>
        <fields fieldSeqId="92" fieldPath="part:customerClasses:thruDate" fieldNameAlias="classThruDate"/>
        <fields fieldSeqId="93" fieldPath="part:customerClasses:classification:classificationTypeEnumId"/>
        <fields fieldSeqId="94" fieldPath="((org.moqui.util.CollectionUtilities.filterMapListByDate(customerClasses?.findAll(),'classFromDate','classThruDate',null)?.find()?.partyClassificationId)?:'CustConsumer')"
                fieldNameAlias="customerClassId" fieldType="keyword"/>

        <conditions conditionSeqId="01" fieldNameAlias="vendorRoleTypeId" fieldValue="OrgInternal"/>
    </dataDocuments>

    <!-- Sales Invoice -->
    <dataDocuments dataDocumentId="MantleSalesInvoice" indexName="mantle_sales" documentName="Sales Invoice"
            primaryEntityName="mantle.account.invoice.Invoice" documentTitle="${invoiceId}">
        <fields fieldSeqId="01" fieldPath="invoiceId"/>
        <fields fieldSeqId="02" fieldPath="invoiceTypeEnumId"/>
        <fields fieldSeqId="03" fieldPath="invoiceTotal"/>
        <fields fieldSeqId="04" fieldPath="appliedPaymentsTotal"/>
        <fields fieldSeqId="05" fieldPath="unpaidTotal"/>
        <fields fieldSeqId="06" fieldPath="currencyUomId"/>
        <fields fieldSeqId="07" fieldPath="productStoreId"/>

        <fields fieldSeqId="11" fieldPath="fromPartyId"/>
        <fields fieldSeqId="12" fieldPath="fromRoles:roleTypeId" fieldNameAlias="fromRoleTypeId"/>
        <fields fieldSeqId="13" fieldPath="toPartyId"/>
        <fields fieldSeqId="14" fieldPath="invoiceDate"/>
        <fields fieldSeqId="15" fieldPath="dueDate"/>
        <fields fieldSeqId="16" fieldPath="statusId"/>

        <fields fieldSeqId="21" fieldPath="paymentApplications:paymentId"/>
        <fields fieldSeqId="22" fieldPath="paymentApplications:amountApplied"/>
        <fields fieldSeqId="23" fieldPath="paymentApplications:appliedDate"/>
        <fields fieldSeqId="24" fieldPath="paymentApplications:payment:effectiveDate"/>
        <fields fieldSeqId="28" fieldNameAlias="prePaymentsTotal" fieldType="double"
                fieldPath="(paymentApplications.findAll({invoiceDate&amp;&amp;it.effectiveDate&amp;&amp;(invoiceDate-it.effectiveDate)&gt;=0})*.amountApplied.sum())"/>

        <fields fieldSeqId="31" fieldPath="toClasses:partyClassificationId"/>
        <fields fieldSeqId="32" fieldPath="toClasses:fromDate" fieldNameAlias="classFromDate"/>
        <fields fieldSeqId="33" fieldPath="toClasses:thruDate" fieldNameAlias="classThruDate"/>
        <fields fieldSeqId="34" fieldPath="toClasses:classification:classificationTypeEnumId"/>
        <fields fieldSeqId="35" fieldPath="((org.moqui.util.CollectionUtilities.filterMapListByDate(toClasses?.findAll(),'classFromDate','classThruDate',null)?.find()?.partyClassificationId)?:'CustConsumer')"
                fieldNameAlias="customerClassId" fieldType="keyword"/>

        <conditions conditionSeqId="01" fieldNameAlias="fromRoleTypeId" fieldValue="OrgInternal"/>
    </dataDocuments>
    <!-- Sales InvoiceItem -->
    <dataDocuments dataDocumentId="MantleSalesInvoiceItem" indexName="mantle_sales" documentName="Sales Invoice Item"
            primaryEntityName="mantle.account.invoice.InvoiceItem" documentTitle="${invoiceId}:${invoiceItemSeqId}">
        <fields fieldSeqId="01" fieldPath="invoiceId"/>
        <fields fieldSeqId="02" fieldPath="invoiceItemSeqId"/>
        <fields fieldSeqId="03" fieldPath="parentItemSeqId"/>
        <fields fieldSeqId="04" fieldPath="itemTypeEnumId"/>
        <fields fieldSeqId="05" fieldPath="productId"/>
        <fields fieldSeqId="06" fieldPath="quantity"/>
        <fields fieldSeqId="07" fieldPath="amount"/>

        <fields fieldSeqId="11" fieldPath="((quantity ?: 1.0) * (amount ?: 0.0))" fieldNameAlias="itemSaleTotal" fieldType="double"/>

        <fields fieldSeqId="14" fieldPath="(issuances ? issuances.sum({ (it.acquireCost ?: 0.0) * it.issuedQuantity }) : null)"
                fieldNameAlias="itemCostTotal" fieldType="double"/>
        <fields fieldSeqId="15" fieldPath="(issuances ? ((quantity ?: 1.0) * (amount ?: 0.0)) - issuances.sum({ (it.acquireCost ?: 0.0) * it.issuedQuantity }) : null)"
                fieldNameAlias="itemMarginTotal" fieldType="double"/>
        <fields fieldSeqId="16" fieldPath="(issuances &amp;&amp; amount ? (((quantity ?: 1.0) * amount) - issuances.sum({ (it.acquireCost ?: 0.0) * it.issuedQuantity })) / ((quantity ?: 1.0) * amount) : null)"
                fieldNameAlias="itemMarginPercent" fieldType="double"/>

        <fields fieldSeqId="21" fieldPath="invoice:fromPartyId"/>
        <fields fieldSeqId="22" fieldPath="invoice:fromRoles:roleTypeId" fieldNameAlias="fromRoleTypeId"/>
        <fields fieldSeqId="23" fieldPath="invoice:toPartyId"/>
        <fields fieldSeqId="24" fieldPath="invoice:invoiceDate"/>
        <fields fieldSeqId="25" fieldPath="invoice:dueDate"/>
        <fields fieldSeqId="26" fieldPath="invoice:statusId"/>
        <fields fieldSeqId="27" fieldPath="invoice:currencyUomId"/>
        <fields fieldSeqId="28" fieldPath="invoice:productStoreId"/>

        <fields fieldSeqId="51" fieldPath="issuances:issuedDate"/>
        <fields fieldSeqId="52" fieldPath="issuances:quantity" fieldNameAlias="issuedQuantity"/>
        <fields fieldSeqId="53" fieldPath="issuances:asset:acquireCost"/>
        <fields fieldSeqId="54" fieldPath="issuances:asset:lotId"/>
        <fields fieldSeqId="55" fieldPath="issuances:(issuedQuantity * (amount ?: 0.0))" fieldNameAlias="issuedSaleTotal" fieldType="double"/>
        <fields fieldSeqId="56" fieldPath="issuances:(acquireCost ? issuedQuantity * acquireCost : null)" fieldNameAlias="issuedCostTotal" fieldType="double"/>
        <fields fieldSeqId="57" fieldPath="issuances:(acquireCost ? (amount ?: 0.0) - acquireCost : null)" fieldNameAlias="issuedMargin" fieldType="double"/>
        <fields fieldSeqId="58" fieldPath="issuances:(acquireCost &amp;&amp; amount ? (amount - acquireCost) / amount : null)"
                fieldNameAlias="issuedMarginPercent" fieldType="float"/>
        <fields fieldSeqId="59" fieldPath="issuances:(acquireCost ? (issuedQuantity * (amount ?: 0.0)) - (issuedQuantity * acquireCost) : null)"
                fieldNameAlias="issuedMarginTotal" fieldType="double"/>

        <fields fieldSeqId="61" fieldPath="product:pseudoId"/>
        <fields fieldSeqId="62" fieldPath="product:productTypeEnumId"/>
        <fields fieldSeqId="63" fieldPath="product:productClassEnumId"/>
        <fields fieldSeqId="64" fieldPath="product:assetTypeEnumId"/>
        <fields fieldSeqId="65" fieldPath="product:assetClassEnumId"/>

        <fields fieldSeqId="71" fieldPath="product:dimensions:dimensionTypeId"/>
        <fields fieldSeqId="72" fieldPath="product:dimensions:value" fieldNameAlias="dimensionValue"/>

        <fields fieldSeqId="81" fieldPath="product:features:productFeatureId"/>
        <fields fieldSeqId="82" fieldPath="product:features:applTypeEnumId"/>
        <fields fieldSeqId="83" fieldPath="product:features:fromDate" fieldNameAlias="applFromDate"/>
        <fields fieldSeqId="84" fieldPath="product:features:thruDate" fieldNameAlias="applThruDate"/>
        <fields fieldSeqId="85" fieldPath="product:features:feature:productFeatureTypeEnumId"/>

        <fields fieldSeqId="90" fieldPath="invoice:toClasses:partyClassificationId"/>
        <fields fieldSeqId="91" fieldPath="invoice:toClasses:fromDate" fieldNameAlias="classFromDate"/>
        <fields fieldSeqId="92" fieldPath="invoice:toClasses:thruDate" fieldNameAlias="classThruDate"/>
        <fields fieldSeqId="93" fieldPath="invoice:toClasses:classification:classificationTypeEnumId"/>
        <fields fieldSeqId="94" fieldPath="((org.moqui.util.CollectionUtilities.filterMapListByDate(toClasses?.findAll(),'classFromDate','classThruDate', null)?.find()?.partyClassificationId)?:'CustConsumer')"
                fieldNameAlias="customerClassId" fieldType="keyword"/>

        <conditions conditionSeqId="01" fieldNameAlias="fromRoleTypeId" fieldValue="OrgInternal"/>
    </dataDocuments>

    <!-- =============== -->
    <!-- Index Data Feed -->
    <moqui.entity.feed.DataFeed dataFeedId="MantleSales" dataFeedTypeEnumId="DTFDTP_RT_PUSH"
            feedName="Mantle Sales Data" feedReceiveServiceName="org.moqui.search.SearchServices.index#DataDocuments"
            feedDeleteServiceName="org.moqui.search.SearchServices.delete#DataDocument">
        <documents dataDocumentId="MantleSalesOrderPart"/>
        <documents dataDocumentId="MantleSalesOrderItem"/>
        <documents dataDocumentId="MantleSalesInvoice"/>
        <documents dataDocumentId="MantleSalesInvoiceItem"/>
    </moqui.entity.feed.DataFeed>
</entity-facade-xml>
