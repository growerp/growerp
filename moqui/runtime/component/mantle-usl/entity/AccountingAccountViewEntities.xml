    <view-entity entity-name="InvoiceAgingSummary" package="mantle.account.invoice">
        <member-entity entity-alias="INV" entity-name="mantle.account.invoice.Invoice"/>
        <member-relationship entity-alias="FPRL" join-from-alias="INV" relationship="fromRoles" join-optional="true"/>
        <member-relationship entity-alias="TPRL" join-from-alias="INV" relationship="toRoles" join-optional="true"/>
        <alias name="fromPartyId" entity-alias="INV"/>
        <alias name="fromRoleTypeId" entity-alias="FPRL" field="roleTypeId"/>
        <alias name="toPartyId" entity-alias="INV"/>
        <alias name="toRoleTypeId" entity-alias="TPRL" field="roleTypeId"/>
        <alias name="statusId" entity-alias="INV"/>
        <alias name="invoiceTypeEnumId" entity-alias="INV"/>
        <alias name="currencyUomId" entity-alias="INV"/>
        <alias name="invoiceCount" entity-alias="INV" field="invoiceId" function="count-distinct" type="number-integer"/>
        <!-- explicit period columns approach -->
        <!-- NOTE: issue with asOfDate concept, this SQL doesn't work and needs a database-specific conversion from string to
            timestamp or some way to pass typed PreparedStatement parameters for case.when.@expression:
            (${asOfDate != null ? '\'' + ec.l10n.format(asOfDate, 'yyyy-MM-dd HH:mm:ss') + '\'' : 'CURRENT_TIMESTAMP'} - INV.${dateField ?: 'DUE_DATE'})
         -->
        <!-- NOTE: to on Postgres must do DATE math for integer compare to avoid error: operator does not exist: interval < integer -->
        <!-- was (CURRENT_TIMESTAMP - INV.${dateField ?: 'DUE_DATE'}) for each -->
        <!-- NOTE: on db2i, must use TIMESTAMPDIFF with 16 for to calculate the difference as days' -->
        <alias name="currentDue" function="sum">
            <case><when expression="${dbConfName=='postgres' ? '(CURRENT_DATE - DATE(INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                      dbConfName=='db2i'     ? '(TIMESTAMPDIFF(16, CHAR(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')))' :
                                      dbConfName=='h2'       ? '(DATEDIFF(DAY, CURRENT_TIMESTAMP, INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                                               '(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')'} &lt; 0">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="period1" function="sum">
            <case><when expression="${dbConfName=='postgres' ? '(CURRENT_DATE - DATE(INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                      dbConfName=='db2i'     ? '(TIMESTAMPDIFF(16, CHAR(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')))' :
                                      dbConfName=='h2'       ? '(DATEDIFF(DAY, CURRENT_TIMESTAMP, INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                                               '(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')'} BETWEEN 0 AND ${(periodDays?:30)}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="period2" function="sum">
            <case><when expression="${dbConfName=='postgres' ? '(CURRENT_DATE - DATE(INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                      dbConfName=='db2i'     ? '(TIMESTAMPDIFF(16, CHAR(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')))' :
                                      dbConfName=='h2'       ? '(DATEDIFF(DAY, CURRENT_TIMESTAMP, INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                                               '(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')'} BETWEEN ${(periodDays?:30)+1} AND ${(periodDays?:30)*2}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="period3" function="sum">
            <case><when expression="${dbConfName=='postgres' ? '(CURRENT_DATE - DATE(INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                      dbConfName=='db2i'     ? '(TIMESTAMPDIFF(16, CHAR(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')))' :
                                      dbConfName=='h2'       ? '(DATEDIFF(DAY, CURRENT_TIMESTAMP, INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                                               '(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')'} BETWEEN ${(periodDays?:30)*2+1} AND ${(periodDays?:30)*3}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="period4" function="sum">
            <case><when expression="${dbConfName=='postgres' ? '(CURRENT_DATE - DATE(INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                      dbConfName=='db2i'     ? '(TIMESTAMPDIFF(16, CHAR(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')))' :
                                      dbConfName=='h2'       ? '(DATEDIFF(DAY, CURRENT_TIMESTAMP, INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                                               '(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')'} BETWEEN ${(periodDays?:30)*3+1} AND ${(periodDays?:30)*4}">
            <!--<case><when expression="${dbConfName=='postgres' ? '((CURRENT_DATE - DATE(' : (dbConfName=='db2i' ? 'TIMESTAMPDIFF(16, CHAR' : '') + '((CURRENT_TIMESTAMP - '}INV.${dateField ?: 'DUE_DATE'}))) BETWEEN ${(periodDays?:30)*3+1} AND ${(periodDays?:30)*4}">-->
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="periodRemaining" function="sum">
            <case><when expression="${dbConfName=='postgres' ? '(CURRENT_DATE - DATE(INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                      dbConfName=='db2i'     ? '(TIMESTAMPDIFF(16, CHAR(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')))' :
                                      dbConfName=='h2'       ? '(DATEDIFF(DAY, CURRENT_TIMESTAMP, INV.' + (dateField ?: 'DUE_DATE') + '))' :
                                                               '(CURRENT_TIMESTAMP - INV.' + (dateField ?: 'DUE_DATE') + ')'} &gt; ${(periodDays?:30)*4+1}">
                <complex-alias expression="INV.UNPAID_TOTAL"/>
            </when><else><complex-alias expression="0"/></else></case>
        </alias>
        <alias name="totalDue" entity-alias="INV" field="unpaidTotal" function="sum"/>
    </view-entity>

