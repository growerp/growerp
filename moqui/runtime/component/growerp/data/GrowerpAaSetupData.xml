    <mantle.product.Product productId="GROWERP_FULL_PLAN" productTypeEnumId="PtService"
        chargeShipping="N" returnable="N" productName="GrowERP full company plan"
        description="Full Company Plan $999 per month|Full functionality, unlimited users|including support for 40hrs/month"
        ownerPartyId="GROWERP" requireInventory="N">
        <prices productPriceId="GROWERP_FULL_PLAN_L" pricePurposeEnumId="PppPurchase"
            priceTypeEnumId="PptList" fromDate="1265184000000"
            minQuantity="1" price="1299" priceUomId="USD" />
        <prices productPriceId="GROWERP_FULL_PLAN_C" pricePurposeEnumId="PppPurchase"
            priceTypeEnumId="PptCurrent" fromDate="1265184000000"
            minQuantity="1" price="999" priceUomId="USD" />
        <categories productCategoryId="GROWERP_SERVICES" fromDate="1265184000000" sequenceNum="3" />
