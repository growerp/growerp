<?xml version="1.0" encoding="UTF-8"?>
<moqui-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/moqui-conf-2.1.xsd">

    <!-- can be overridden in the docker-compose.yml env setting: paymentGatewayConfigId: 'STRIPE' -->
    <default-property name="paymentGatewayConfigId" value="TEST_APPROVE" /><!-- STRIPE -->
    <default-property name="default_locale" value="UTC" />
    <default-property name="default_time_zone" value="UTC" />
    <default-property name="database_time_zone" value="UTC" />

    <server-stats bin-length-seconds="900" visit-enabled="false" visit-ip-info-on-login="true"
        visitor-enabled="false">
        <!-- not sure if these really work -->
        <artifact-stats type="AT_XML_SCREEN" persist-bin="false" persist-hit="false" />
        <artifact-stats type="AT_XML_SCREEN_CONTENT" persist-bin="false" persist-hit="false" />
        <artifact-stats type="AT_XML_SCREEN_TRANS" persist-bin="false" persist-hit="false" />
        <artifact-stats type="AT_SERVICE" persist-bin="false" persist-hit="true" />
        <artifact-stats type="AT_ENTITY" persist-bin="false" />
    </server-stats>

    <webapp-list>
        <webapp name="webroot">
            <!-- Notification Message Endpoint -->
            <endpoint path="/chat" class="org.moqui.impl.webapp.ChatEndpoint"
                timeout="3600000" enabled="true" />
        </webapp>
    </webapp-list>


    <screen-facade>
        <screen location="component://webroot/screen/webroot.xml">
            <subscreens-item name="growerp" menu-include="false" no-sub-path="true"
                location="component://growerp/screen/rest.xml"/>
        </screen>
    </screen-facade>

</moqui-conf>