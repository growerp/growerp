<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-2.1.xsd">

    <!-- Menu Configuration with Top-Level Items View -->
    <view-entity entity-name="MenuConfigurationAndItems" package="growerp.menu">
        <description>View to retrieve menu configurations with their top-level menu items</description>
        
        <member-entity entity-alias="CONFIG" entity-name="growerp.menu.MenuConfiguration"/>
        
        <member-entity entity-alias="ITEM" entity-name="growerp.menu.MenuItem"
            join-from-alias="CONFIG" join-optional="true">
            <key-map field-name="menuConfigurationId"/>
        </member-entity>

        <!-- Configuration fields -->
        <alias name="menuConfigurationId" entity-alias="CONFIG"/>
        <alias name="appId" entity-alias="CONFIG"/>
        <alias name="userId" entity-alias="CONFIG"/>
        <alias name="configName" field="name" entity-alias="CONFIG"/>
        <alias name="configDescription" field="description" entity-alias="CONFIG"/>
        <alias name="configIsActive" field="isActive" entity-alias="CONFIG"/>
        <alias name="configCreatedDate" field="createdDate" entity-alias="CONFIG"/>
        
        <!-- Menu item fields -->
        <alias name="menuItemId" entity-alias="ITEM"/>
        <alias name="parentMenuItemId" entity-alias="ITEM"/>
        <alias name="itemKey" entity-alias="ITEM"/>
        <alias name="title" entity-alias="ITEM"/>
        <alias name="route" entity-alias="ITEM"/>
        <alias name="iconName" entity-alias="ITEM"/>
        <alias name="widgetName" entity-alias="ITEM"/>
        <alias name="image" entity-alias="ITEM"/>
        <alias name="selectedImage" entity-alias="ITEM"/>
        <alias name="userGroupsJson" entity-alias="ITEM"/>
        <alias name="sequenceNum" entity-alias="ITEM"/>
        <alias name="itemIsActive" field="isActive" entity-alias="ITEM"/>
    </view-entity>

    <!-- Menu Item with Children View (for hierarchical queries) -->
    <view-entity entity-name="MenuItemAndChildren" package="growerp.menu">
        <description>View to retrieve menu items with their child items</description>
        
        <member-entity entity-alias="ITEM" entity-name="growerp.menu.MenuItem"/>
        
        <member-entity entity-alias="CHILD" entity-name="growerp.menu.MenuItem"
            join-from-alias="ITEM" join-optional="true">
            <key-map field-name="menuItemId" related="parentMenuItemId"/>
        </member-entity>
        
        <!-- Parent item fields -->
        <alias name="menuItemId" entity-alias="ITEM"/>
        <alias name="menuConfigurationId" entity-alias="ITEM"/>
        <alias name="parentMenuItemId" entity-alias="ITEM"/>
        <alias name="itemKey" entity-alias="ITEM"/>
        <alias name="title" entity-alias="ITEM"/>
        <alias name="route" entity-alias="ITEM"/>
        <alias name="iconName" entity-alias="ITEM"/>
        <alias name="widgetName" entity-alias="ITEM"/>
        <alias name="image" entity-alias="ITEM"/>
        <alias name="selectedImage" entity-alias="ITEM"/>
        <alias name="userGroupsJson" entity-alias="ITEM"/>
        <alias name="sequenceNum" entity-alias="ITEM"/>
        <alias name="itemIsActive" field="isActive" entity-alias="ITEM"/>
        
        <!-- Child item fields -->
        <alias name="childMenuItemId" field="menuItemId" entity-alias="CHILD"/>
        <alias name="childTitle" field="title" entity-alias="CHILD"/>
        <alias name="childIconName" field="iconName" entity-alias="CHILD"/>
        <alias name="childWidgetName" field="widgetName" entity-alias="CHILD"/>
        <alias name="childImage" field="image" entity-alias="CHILD"/>
        <alias name="childSequenceNum" field="sequenceNum" entity-alias="CHILD"/>
        <alias name="childIsActive" field="isActive" entity-alias="CHILD"/>
    </view-entity>

</entities>
