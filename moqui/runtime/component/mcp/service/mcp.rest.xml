<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-2.1.xsd"
    name="mcp" displayName="MCP REST API" version="1.0.0"
    description="Services for the MCP server">

    <resource name="health" require-authentication="anonymous-all"
        description="Check if the MCP is available, requires API key authentication">
        <method type="get">
            <service name="McpServices.get#Health" />
        </method>
    </resource>
    <resource name="tools" require-authentication="anonymous-all"
        description="Check Available MCP Tools, requires API key authentication">
        <method type="get">
            <service name="McpServices.list#Tools" />
        </method>
    </resource>
    <resource name="resources" require-authentication="anonymous-all"
        description="Check Available MCP Resources, listing is public but access requires API key authentication">
        <method type="get">
            <service name="McpServices.list#McpResources" />
        </method>
    </resource>
    <resource name="prompts" require-authentication="anonymous-all"
        description="Check Available MCP Prompts, requires API key authentication">
        <method type="get">
            <service name="McpServices.list#Prompts" />
        </method>
    </resource>
    <resource name="mcp" require-authentication="anonymous-all"
        description="MCP endpoints with API key authentication required">
        <method type="get">
            <service name="McpServices.list#Tools" />
        </method>
        <method type="post">
            <service name="McpServices.handle#McpRequest" />
        </method>
    </resource>
    <resource name="protocol" require-authentication="anonymous-all"
        description="MCP Protocol endpoint with flexible format support">
        <method type="post">
            <service name="McpServices.handle#McpRequestFlexible" />
        </method>
    </resource>
    <resource name="auth" require-authentication="anonymous-all"
        description="Authentication endpoints for MCP">
        <resource name="login" require-authentication="anonymous-all"
            description="Handle login prompt from AI">
            <method type="post">
                <service name="McpAuthServices.handle#LoginPrompt" />
            </method>
        </resource>
        <resource name="prompt" require-authentication="anonymous-all"
            description="Create authentication prompt">
            <method type="get">
                <service name="McpAuthServices.create#AuthPrompt" />
            </method>
        </resource>
    </resource>

    <!-- Standard OAuth/OIDC discovery endpoint -->
    <resource name=".well-known" require-authentication="anonymous-all">
        <resource name="oauth-authorization-server" require-authentication="anonymous-all">
            <method type="get">
                <service name="McpAuthServices.get#OauthDiscovery" />
            </method>
        </resource>
    </resource>
</resource>