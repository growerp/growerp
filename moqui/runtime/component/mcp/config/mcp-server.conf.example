# GrowERP MCP Server Configuration Example

# This file shows example configurations for the GrowERP MCP Server
# Copy and customize these settings for your environment

##################################################################
# MCP Server Settings
##################################################################

# Server port (default: 3000)
MCP_SERVER_PORT=3000

# Enable debug mode for detailed logging
MCP_SERVER_DEBUG=false

# Allowed origins for CORS (comma-separated)
MCP_ALLOWED_ORIGINS=*

# WebSocket configuration
MCP_WEBSOCKET_ENABLED=true
MCP_WEBSOCKET_MAX_CONNECTIONS=100

##################################################################
# Security Configuration
##################################################################

# Require API key for access
SECURITY_API_KEY_REQUIRED=false

# API key (if required)
# SECURITY_API_KEY=your-secure-api-key-here

# Session timeout in milliseconds (24 hours default)
SECURITY_SESSION_TIMEOUT=86400000

# Enable user authentication
SECURITY_USER_AUTH_ENABLED=true

# Allowed user roles (comma-separated)
SECURITY_ALLOWED_ROLES=ADMIN,EMPLOYEE,MANAGER

##################################################################
# Performance Settings
##################################################################

# Enable response caching
PERFORMANCE_CACHING_ENABLED=true

# Cache TTL in seconds
PERFORMANCE_CACHE_TTL=300

# Thread pool size for async operations
PERFORMANCE_POOL_SIZE=10

# Maximum concurrent connections
PERFORMANCE_MAX_CONNECTIONS=50

# Request timeout in milliseconds
PERFORMANCE_REQUEST_TIMEOUT=30000

##################################################################
# Data Access Configuration
##################################################################

# Maximum number of records returned by queries
DATA_MAX_RESULTS=1000

# Enable data pagination
DATA_PAGINATION_ENABLED=true

# Default page size
DATA_DEFAULT_PAGE_SIZE=50

# Maximum page size
DATA_MAX_PAGE_SIZE=500

##################################################################
# Business Logic Settings
##################################################################

# Auto-approve created documents (development only)
BUSINESS_AUTO_APPROVE=false

# Default currency
BUSINESS_DEFAULT_CURRENCY=USD

# Default company party ID
BUSINESS_DEFAULT_COMPANY=Company

# Enable workflow validation
BUSINESS_WORKFLOW_VALIDATION=true

##################################################################
# Logging Configuration
##################################################################

# Log level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable MCP protocol logging
LOG_MCP_PROTOCOL=false

# Enable performance logging
LOG_PERFORMANCE=true

# Log file rotation
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

##################################################################
# Development Settings
##################################################################

# Enable development mode (more detailed errors)
DEV_MODE=false

# Enable hot reload for services
DEV_HOT_RELOAD=false

# Mock external services
DEV_MOCK_EXTERNAL=false

# Test data generation
DEV_GENERATE_TEST_DATA=false

##################################################################
# Integration Settings
##################################################################

# External API endpoints
INTEGRATION_CRM_ENDPOINT=
INTEGRATION_ACCOUNTING_ENDPOINT=
INTEGRATION_INVENTORY_ENDPOINT=

# API timeouts
INTEGRATION_TIMEOUT=30000

# Retry configuration
INTEGRATION_MAX_RETRIES=3
INTEGRATION_RETRY_DELAY=1000

##################################################################
# Monitoring and Health Checks
##################################################################

# Enable health check endpoint
HEALTH_CHECK_ENABLED=true

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Enable metrics collection
METRICS_ENABLED=true

# Metrics endpoint
METRICS_ENDPOINT=/mcp/metrics

##################################################################
# Database Settings (if different from Moqui defaults)
##################################################################

# Connection pool settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_VALIDATION_QUERY=SELECT 1

# Query timeouts
DB_QUERY_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

##################################################################
# Email Configuration (for notifications)
##################################################################

# SMTP settings
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_SMTP_TLS=true

# Default sender
EMAIL_FROM=noreply@growerp.com

##################################################################
# File Storage Configuration
##################################################################

# File upload settings
FILE_UPLOAD_MAX_SIZE=10MB
FILE_UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,csv,txt,jpg,png

# Storage location
FILE_STORAGE_PATH=runtime/db/h2/attachments

##################################################################
# Backup and Recovery
##################################################################

# Automatic backup settings
BACKUP_ENABLED=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30d
BACKUP_LOCATION=backups/

##################################################################
# Advanced Features
##################################################################

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# AI/ML integration
AI_INTEGRATION_ENABLED=false
AI_MODEL_ENDPOINT=

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_RETENTION=90d

##################################################################
# Environment-Specific Overrides
##################################################################

# Development Environment
[development]
MCP_SERVER_DEBUG=true
LOG_LEVEL=DEBUG
PERFORMANCE_CACHING_ENABLED=false
DEV_MODE=true

# Testing Environment  
[testing]
MCP_SERVER_DEBUG=true
LOG_LEVEL=DEBUG
BUSINESS_AUTO_APPROVE=true
DEV_GENERATE_TEST_DATA=true

# Production Environment
[production]
MCP_SERVER_DEBUG=false
LOG_LEVEL=WARN
SECURITY_API_KEY_REQUIRED=true
PERFORMANCE_CACHING_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
